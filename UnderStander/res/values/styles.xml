<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
   <style name="FullScreenTheme" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>
	
   <style name="LineVertical">
        <item name="android:background">@color/divideline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="ListDivider" parent="@style/LineVertical">
        <item name="android:background">@color/divideline_listview</item>
    </style>
   
    <style name="List">
        <item name="android:background">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:childDivider">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:smoothScrollbar">true</item>
    </style>
    
    <style name="NoSelectorList" parent="@style/List">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
   
   	<style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
